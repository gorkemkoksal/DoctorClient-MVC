@page
@model Hospital_MVC.Pages.LoginModel

<div class="text-center w-100">

    <main class="form-signin">

        <form>

            <img class="mb-4" src="bootstrap-logo.svg" alt="" width="72" height="57">

            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating mb-3">

                <input class="form-control" placeholder="name@example.com">

                <label>Email address</label>

            </div>

            <div class="form-floating mb-3">

                <input class="form-control" placeholder="Password">

                <label>Password</label>

            </div>

            <div class="checkbox mb-3">

                <label>

                    <input type="checkbox" /> Remember me

                </label>

            </div>


            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>

            <div class="mt-1">

                <a href="Register" class="btn btn-primary btn-lg px-4">Register</a>

                <a href="Index" class="btn btn-primary btn-lg px-4">Home</a>

            </div>

            <p class="mt-2 mb-3 text-muted">&copy; 2017–2021</p>

        </form>

    </main>

</div>