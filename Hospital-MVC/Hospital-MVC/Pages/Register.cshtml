@page
@model Hospital_MVC.Pages.RegisterModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<form method="post">
	<div class="card my-4 mx-auto" style="width: 36rem;">
		<img src="./Images/hospital.png" class="card-img-top mx-auto w-50 p-3" alt="hospital">
		<div class="card-body">

			<h5 class="card-title">Please Register</h5>

			<div class="form-floating mb-3">
				<input asp-for="Registration.EmailID" class="form-control" placeholder="name@example.com">
				<label asp-for="Registration.EmailID">Email address</label>
			</div>

			<div class="d-sm-flex align-items-center justify-content-between">
				<div>
					<div>
						<input asp-for="Registration.UserType" value="p" class="form-check-input" type="radio" checked>
						<label asp-for="Registration.UserType" class="form-check-label">
							I am a Patient
						</label>
					</div>

					<div class="mb-3">
						<input asp-for="Registration.UserType" value="d" class="form-check-input" type="radio">
						<label asp-for="Registration.UserType" class="form-check-label">
							I am a Doctor
						</label>
					</div>
				</div>
				<img src="@Model.ImageSource" class="w-25" />

			</div>

			<p class="mt-2 mb-3 text-muted">(password will be emailed)</p>

			<div asp-validation-summary="All" class="text-danger"></div>

			<button class="btn btn-primary btn-lg w-100 m-1" type="submit">Register</button>
			<a asp-page="Index" class="btn btn-secondary btn-lg w-100 m-1">Home</a>
		</div>
	</div>
</form>
